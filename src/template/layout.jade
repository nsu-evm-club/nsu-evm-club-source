mixin record_view(record_title)
  div.panel.panel-default
    div.panel-heading
      h4= record_title
    div.panel-body
      block

doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/css/bootstrap.min.css')
    link(rel='stylesheet', href='/css/main.css')
  body
    include header
    div.container
      block content
    script(src='/js/jquery.min.js')
    script(src='/js/bootstrap.min.js')